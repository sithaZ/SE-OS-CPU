<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.MainController">

    <top>
        <VBox alignment="CENTER" styleClass="header-box">
            <children>
                <Label styleClass="white-header" text="Process Scheduling Solver" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font></Label>
            </children>
            <BorderPane.margin>
                <Insets bottom="10" />
            </BorderPane.margin>
        </VBox>
    </top>

    <left>
        <VBox prefWidth="280.0" spacing="15" styleClass="card sidebar">
            <BorderPane.margin>
                <Insets right="10" />
            </BorderPane.margin>

            <Label styleClass="sidebar-title" text="Input" />

            <VBox spacing="15.0">
                <children>
                    <VBox spacing="5.0">
                        <children>
                            <Label text="Algorithm" />
                            <ComboBox fx:id="algorithmComboBox" maxWidth="Infinity" promptText="Choose Algorithm" styleClass="card" />
                        </children>
                    </VBox>

                    <VBox spacing="5.0">
                        <children>
                            <Label text="Arrival Times" />
                            <TextField fx:id="arrivalTimeField" promptText="e.g., 0 2 4 5" styleClass="card" />
                        </children>
                    </VBox>

                    <VBox spacing="5.0">
                        <children>
                            <Label text="Burst Times" />
                            <TextField fx:id="burstTimeField" promptText="e.g., 5 3 1 6" styleClass="card" />
                        </children>
                    </VBox>

                    <VBox spacing="5.0">
                        <children>
                            <Label text="Time Quantum" />
                            <TextField fx:id="quantumField" promptText="e.g., 2" styleClass="card" />
                        </children>
                    </VBox>
                </children>
            </VBox>

            <VBox alignment="CENTER" spacing="10">
                <children>
                    <Button maxWidth="Infinity" onAction="#solve" styleClass="action-button" text="Solve" />
                    <Button maxWidth="Infinity" onAction="#resetApplication" styleClass="reset-button" text="Reset" />
                </children>
            </VBox>
        </VBox>
    </left>

    <center>
        <VBox spacing="15" styleClass="card content-card">
            <children>
                <Label styleClass="content-title" text="Process Details" />
                <TableView fx:id="processTable" styleClass="card">
                    <columns>
                        <TableColumn fx:id="nameColumn" text="Process" />
                        <TableColumn fx:id="arrivalColumn" text="Arrival" />
                        <TableColumn fx:id="burstColumn" text="Burst" />
                        <TableColumn fx:id="finishTimeColumn" text="Finish" />
                        <TableColumn fx:id="turnaroundTimeColumn" text="Turnaround" />
                        <TableColumn fx:id="waitingTimeColumn" text="Waiting" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <Separator />
                <Label styleClass="content-title" text="Results" />
                <Label text="Gantt Chart:" />
                <HBox fx:id="ganttChartBox" alignment="CENTER_LEFT">
               <styleClass>
                  <String fx:value="gantt-chart" />
                  <String fx:value="card" />
               </styleClass></HBox>
                <Label fx:id="avgWaitingTimeLabel" text="Average Waiting Time: " />
                <Label fx:id="avgTurnaroundTimeLabel" text="Average Turnaround Time: " />
            </children>
        </VBox>
    </center>
</BorderPane>
